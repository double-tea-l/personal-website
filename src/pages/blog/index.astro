---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="阅读笔记" description="读书与文章笔记">
  <h1 class="mb-6 text-2xl font-bold">阅读笔记</h1>
  <ul class="space-y-4">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.slug}`} class="block hover:opacity-80">
          <span class="font-medium">{post.data.title}</span>
          <span class="ml-2 text-sm text-neutral-500">
            {post.data.date.toLocaleDateString("zh-CN")}
          </span>
        </a>
      </li>
    ))}
  </ul>
</Layout>
