---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="阅读笔记" description="读书与文章笔记">
  <h1 class="mb-6">阅读笔记</h1>
  <ul class="space-y-3 list-none pl-0">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.slug}`} class="block py-1.5 border-b border-[#e0ddd6] border-opacity-60 last:border-0">
          <span class="font-medium text-[#1c1917]">{post.data.title}</span>
          <span class="ml-2 text-sm text-[#78716c]">
            {post.data.date.toLocaleDateString("zh-CN")}
          </span>
        </a>
      </li>
    ))}
  </ul>
</Layout>
